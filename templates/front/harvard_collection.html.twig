{% extends 'front/base.html.twig' %}

{% block title %}Harvard Collection - MuseHub{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-4 fw-bold mb-2">Collection Harvard</h1>
            <p class="lead text-muted">Exploration de l'API Harvard Art Museums</p>
        </div>
        <a href="{{ path('artworks') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Retour aux Œuvres Locales
        </a>
    </div>

    <div class="row g-4 mb-5">
        {% for artwork in artworks %}
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="position-relative" style="height: 250px; overflow: hidden;">
                    {% if artwork.images is defined and artwork.images|length > 0 %}
                        <img src="{{ artwork.images[0].baseimageurl }}" alt="{{ artwork.title }}" class="card-img-top w-100 h-100" style="object-fit: cover;">
                    {% else %}
                        <div class="bg-light w-100 h-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-university fa-3x text-muted"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="card-body">
                    <h5 class="card-title h6 mb-2">{{ artwork.title|slice(0, 50) }}</h5>
                    <p class="small text-muted mb-2">
                        {% if artwork.people is defined and artwork.people|length > 0 %}
                            {{ artwork.people[0].name }}
                        {% else %}
                            Artiste Inconnu
                        {% endif %}
                    </p>
                    <p class="small mb-0">
                        <span class="badge bg-secondary">{{ artwork.classification|default('Art') }}</span>
                        <span class="badge bg-light text-dark border">{{ artwork.dated|default('N/D') }}</span>
                    </p>
                </div>
                <div class="card-footer bg-white border-top-0 pb-3">
                    <a href="{{ artwork.url }}" target="_blank" class="btn btn-sm btn-outline-dark w-100">
                        <i class="fas fa-external-link-alt me-1"></i>Voir sur Harvard
                    </a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle me-2"></i>Impossible de charger les œuvres ou aucune œuvre trouvée.
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Simple Pagination -->
    <div class="d-flex justify-content-center gap-2">
        {% if page > 1 %}
            <a href="{{ path('harvard_collection', {page: page - 1}) }}" class="btn btn-outline-primary">
                <i class="fas fa-chevron-left me-2"></i>Précédent
            </a>
        {% endif %}
        <span class="btn btn-primary disabled">Page {{ page }}</span>
        <a href="{{ path('harvard_collection', {page: page + 1}) }}" class="btn btn-outline-primary">
            Suivant<i class="fas fa-chevron-right ms-2"></i>
        </a>
    </div>
</div>
{% endblock %}
