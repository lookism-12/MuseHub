{% extends 'admin/base.html.twig' %}

{% block title %}Corbeille - Utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-trash"></i> Corbeille</h1>
        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if users|length == 0 %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> La corbeille est vide.
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Utilisateurs supprimés ({{ users|length }})</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Nom d'utilisateur</th>
                                <th>Nom complet</th>
                                <th>Supprimé le</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr>
                                <td>
                                    <i class="bi bi-envelope"></i> {{ user.email }}
                                </td>
                                <td>{{ user.username ?? '-' }}</td>
                                <td>
                                    {% if user.firstName or user.lastName %}
                                        {{ user.firstName }} {{ user.lastName }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> {{ user.deletedAt|date('d/m/Y') }}
                                        <i class="bi bi-clock ms-2"></i> {{ user.deletedAt|date('H:i') }}
                                    </small>
                                </td>
                                <td class="text-end">
                                    <form method="post" action="{{ path('admin_trash_restore', {'id': user.id}) }}" style="display:inline-block;" class="me-1">
                                        <input type="hidden" name="_token" value="{{ csrf_token('restore' ~ user.id) }}">
                                        <button class="btn btn-sm btn-success" onclick="return confirm('Restaurer cet utilisateur ?')" title="Restaurer">
                                            <i class="bi bi-arrow-counterclockwise"></i> Restaurer
                                        </button>
                                    </form>
                                    
                                    <form method="post" action="{{ path('admin_trash_delete_permanently', {'id': user.id}) }}" style="display:inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_permanently' ~ user.id) }}">
                                        <button class="btn btn-sm btn-danger" onclick="return confirm('⚠️ ATTENTION : Cette action est IRRÉVERSIBLE !\\n\\nÊtes-vous absolument sûr de vouloir supprimer définitivement cet utilisateur ?\\n\\nToutes les données associées seront perdues.')" title="Supprimer définitivement">
                                            <i class="bi bi-trash-fill"></i> Supprimer définitivement
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-triangle"></i> <strong>Attention :</strong> 
            Les utilisateurs restaurés retrouveront leur accès complet au système. 
            La suppression définitive est irréversible et supprimera toutes les données associées.
        </div>
    {% endif %}
</div>
{% endblock %}
